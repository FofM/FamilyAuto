@model FamilyAuto.Models.FavoriteVehicle

@if (Request.IsAuthenticated)
{ 

<div class="container">
    @using (Html.BeginForm("SaveFavorite", "Vehicle", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        string vehID = Request.Url.AbsolutePath.Split('/').Last();
            <div class="form-group">
                <div class="col-md-6">
                    @Html.TextBoxFor(m => m.VehicleId, new { @class = "form-control hidden", @Value = vehID })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-6">
                    <input type="submit" class="btn btn-default" value="Mark as Favorite" />
                </div>
            </div>
    }

</div>
}