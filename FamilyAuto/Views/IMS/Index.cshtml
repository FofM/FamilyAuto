@model IEnumerable<FamilyAuto.Models.Articles>

@{
    ViewBag.Title = "IMS";
}

<h2>IMS</h2>

<div class="row">
    <div class=col-md-4>
        <h4>Maintain Customers and Suppliers</h4>
        <a class="btn btn-default" href="#">Customers</a>
        <a class="btn btn-default" href="#">Suppliers</a>
    </div>
    <div class=col-md-4>
        <h4>Services overview</h4>
        <a class="btn btn-default" href="#">ENTER</a>
    </div>
    <div class=col-md-4>
        <h4>Vehicle overview</h4>
        <a class="btn btn-default" href="#">ENTER</a>
    </div>
</div>

<br /><br /><br /><br />

<div class="row">
    <h3>Customers</h3>
    <div class="col-md-3 form-group">
        <h4>Add new customer</h4>
        <label>First Name:</label>
        <input class="form-control" type="text" />
        <label>Last Name:</label>
        <input class="form-control" type="text" />
        <label>Address:</label>
        <input class="form-control" type="text" />
        <label>City:</label>
        <input class="form-control" type="text" />
        <label>Telephone Number:</label>
        <input class="form-control" type="text" />
        <label>Email:</label>
        <input class="form-control" type="text" />
        <br />
        <a class="btn btn-default" href="#">Create</a>
    </div>

    <div class="col-md-2"></div>

    <h3>Suppliers</h3>
    <div class="col-md-3 form-group">
        <h4>Add new supplier</h4>
        <label>Company Name:</label>
        <input class="form-control" type="text" />
        <label>CRN:</label>
        <input class="form-control" type="text" />
        <label>Address:</label>
        <input class="form-control" type="text" />
        <label>City:</label>
        <input class="form-control" type="text" />
        <label>Telephone Number:</label>
        <input class="form-control" type="text" />
        <label>Email:</label>
        <input class="form-control" type="text" />
        <br />
        <a class="btn btn-default" href="#">Create</a>
    </div>
</div>


<div class="row">
    <h3>Customers</h3>
    <div class="col-md-3 form-group">
        <h4>Register active service</h4>
        <label>Service:</label>
        <select class="form-control">
            <option value="Oil Change">Oil Change</option>
        </select>
        <input class="form-control" type="text" />
        <label>Price:</label>
        <input class="form-control" type="text" />$
        <label>Ordered On:</label>
        <input class="form-control" type="date" />
        <label>Due:</label>
        <input class="form-control" type="date" />
        <label>Ordered by:</label>
        <select class="form-control">
            <option value="Filip Grasheski">Filip Grasheski</option>
        </select>
        <br />
        <a class="btn btn-default" href="#">Apply</a>
    </div>
</div>